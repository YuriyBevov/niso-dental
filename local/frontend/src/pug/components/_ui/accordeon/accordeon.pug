mixin accordeon(data)
  .accordeon
    each item in data
      .accordeon-item(class= item.cls ? item.cls : null)
        .accordeon-header(tabindex="0")
          span.base-subtitle!= item.text
          .accordeon-opener(role="button" aria-label="Развернуть ответ")
            svg(width='24' height='24' aria-hidden='true')
              use(xlink:href='./assets/sprite.svg#icon-plus')
        .accordeon-body
          .content-block!= item.content
